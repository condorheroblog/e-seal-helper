{
	"name": "e-seal-helper",
	"type": "module",
	"version": "0.0.0",
	"private": true,
	"description": "Generate electronic seal",
	"author": "CondorHero",
	"license": "GPL-3.0",
	"homepage": "https://github.com/condorheroblog/e-seal-helper#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/condorheroblog/e-seal-helper.git"
	},
	"bugs": {
		"url": "https://github.com/condorheroblog/e-seal-helper/issues"
	},
	"keywords": [
		"seal"
	],
	"scripts": {
		"dev": "ntl dev",
		"dev:live": "netlify dev --live",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"postinstall": "simple-git-hooks",
		"build:install": "pnpm -r --filter=./packages/client --filter=./packages/server install",
		"build:client": "pnpm run build:install && cp ./packages/server/hack-node-canvas/* ./packages/server/node_modules/canvas/build/Release/ && pnpm -r --filter=./packages/client run build",
		"release": "bumpp package.json packages/*/package.json --commit --push --tag"
	},
	"dependencies": {},
	"devDependencies": {
		"@antfu/eslint-config": "^0.26.3",
		"bumpp": "^8.2.1",
		"eslint": "^8.23.1",
		"eslint-plugin-wxml": "^0.7.5",
		"lint-staged": "^13.0.3",
		"netlify-cli": "^11.8.0",
		"simple-git-hooks": "^2.8.0"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged",
		"preserveUnused": [
			"commit-msg"
		]
	},
	"lint-staged": {
		"*.{json,js,jsx,mjs,cjs,ts,tsx,md}": [
			"eslint --fix"
		]
	}
}
