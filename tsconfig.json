{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2020",
		"allowJs": true,
		"moduleResolution": "node",
		"strictNullChecks": true,
		"noImplicitThis": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"noUnusedParameters": true,
		"lib": [
			"ESNext"
		]
	},
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"**/node_modules",
		"**/miniprogram_npm"
	]
}
